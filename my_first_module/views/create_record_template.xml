<xml>
    <data>
        <record id="create_record_template" model="ir.ui.view">
            <field name="name">Create Record Template</field>
            <field name="model_id" ref="my_first_module.model_my_model"/>
            <field name="arch" type="xml">
                <form string="Create Record">
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <footer>
                        <button string="Save" type="object" name="action_save_record" class="btn-primary"/>
                        <button string="Cancel" type="object" name="action_cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>