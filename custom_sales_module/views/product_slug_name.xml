<odoo>
    <record id="product_template_form_view_inherit_slug" model="ir.ui.view">
        <field name="name">product.template.form.inherit.slug</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
            
                <group>
                    <field name="slug"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
